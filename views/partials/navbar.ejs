<div class="w-full px-10 py-4 flex items-center justify-between">
    <h3 class="select-none text-red-600 hover:text-red-700 duration-300 font-semibold text-2xl">Pinterest</h3>
    <% if (page === "profile") { %>
        <div class="flex items-center justify-center gap-4">
            <a class="text-sm capitalize font-semibold duration-300 text-black bg-zinc-200 hover:bg-zinc-300 px-4 py-2 rounded-lg" href="/feed">Feed</a>
            <a class="text-sm capitalize font-semibold duration-300 text-white bg-orange-600 hover:bg-orange-700 px-4 py-2 rounded-lg" href="/logout">Logout</a>
        </div>
    <% } else if (page === "add") { %>
        <div class="flex items-center justify-center gap-4">
            <a class="text-sm capitalize font-semibold duration-300 text-black bg-zinc-200 hover:bg-zinc-300 px-4 py-2 rounded-lg" href="/profile">profile</a>
        </div>
    <% } else if (page === "feed") { %>
        <div class="flex items-center justify-center">
            <a href="/profile">
                <div class="image w-8 h-8 rounded-full overflow-hidden">
                    <img src="/images/uploads/<%= user.profileImage %>" alt="Profile Image">
                </div>
            </a>
        </div>
    <% } %>
</div>